# Service Configuration
PORT=9001
HOST=0.0.0.0
RELOAD_DEBUG=False
UVICORN_LOG_LEVEL=warning
MAX_WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO
# Options: standard, json
LOG_FORMAT=standard
# Optional: Path to log file (if empty, logs only to console)
LOG_FILE=logs/iot-service.log

# SSH Reverse Tunnel (Optional)
