PUBLIC_PORT=9003
PRIVATE_SERVER_PORT=9001
SSH_USER=your-ssh-username
SSH_PASSWORD=your-ssh-password
SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa
SSH_PASSPHRASE=your-key-passphrase

# Face Recognition
FACE_RECOGNITION_TIMEOUT=3.0